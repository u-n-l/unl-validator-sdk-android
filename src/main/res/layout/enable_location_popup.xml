<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_20sdp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/theme_round_btn"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    android:paddingVertical="@dimen/_5sdp"
    android:paddingHorizontal="@dimen/_16sdp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/headerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/poppins_bold"
            android:text="Enable Location"
            android:textColor="@color/black2"
            android:textSize="@dimen/_17ssp" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/entranceDetails"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/_5sdp"
            android:fontFamily="@font/poppins_regular"
            android:text="Your Locations Settings is set to 'Off'.\nPlease 'On' Location to use UNL validator"
            android:textColor="@color/gray1"
            android:textSize="@dimen/_10ssp" />


       <androidx.appcompat.widget.LinearLayoutCompat
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/_10sdp"
           android:weightSum="2"
           android:orientation="horizontal">

           <TextView
               android:id="@+id/tvSkip"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:layout_marginBottom="@dimen/_16sdp"
               android:layout_margin="@dimen/_10sdp"
               android:background="@drawable/skip_btn_shape"
               android:fontFamily="@font/poppins_bold"
               android:paddingVertical="@dimen/_8sdp"
               android:text="@string/cancel"
               android:gravity="center"
               android:textAlignment="center"
               android:textColor="@color/purple1"
               android:textSize="@dimen/_11ssp" />

           <androidx.appcompat.widget.AppCompatTextView
               android:id="@+id/tvSettings"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:layout_marginBottom="@dimen/_11sdp"
               android:background="@drawable/theme_round_btn"
               android:fontFamily="@font/poppins_bold"
               android:layout_margin="@dimen/_10sdp"
               android:paddingVertical="@dimen/_8sdp"
               android:clickable="false"
               android:text="@string/settings"
               android:gravity="center"
               android:textAlignment="center"
               android:textColor="@color/white"
               android:textSize="@dimen/_11ssp" />

       </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>


</RelativeLayout>


