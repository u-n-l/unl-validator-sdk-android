<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Design.TextInputLayout" parent="android:Widget">
        <item name="hintTextAppearance">@style/TextAppearance.Design.Hint</item>
    </style>
    <style name="TextAppearance.Design.Hint" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">?attr/colorControlActivated</item>
        <item name="android:textSize">10sp</item>
    </style>


    <style name="DialogThemeAppCompat" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/design_default_color_primary</item>
        <item name="colorAccent">@color/design_default_color_on_primary</item>
        <item name="colorPrimaryDark">@color/design_default_color_primary_dark</item>
        <item name="colorControlActivated">@color/design_default_color_primary_variant</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowMinWidthMajor">94%</item>
        <item name="android:windowMinWidthMinor">94%</item>
        <!--added below line for cancelable false behaviour on touch outside dialog-->
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

</resources>